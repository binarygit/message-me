<%= tag.div class: "flash alert alert-#{ @message_type } alert-dismissible fade show", 
  data: { controller: "remove-element", "remove-element-delay-value": "5000" } do %>
  <%= tag.strong @message %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
<% end %>
